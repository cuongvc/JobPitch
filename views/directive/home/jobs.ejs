<link rel="stylesheet" type="text/css" href="../css/home/jobs.css">
<div id="jobs" ng-controller="JobCtrl">
	<div class="container">
		<div class="col-md-36 col-sm-36 col-xs-36" id="jobs">
			<div class="col-md-9 col-sm-12 col-xs-36"ng-repeat="job in jobs">
				<div class="job" ng-click="ViewJob(job)">
					<div class="image">
						<img ng-src="{{ job.image_small }}" alt="">
					</div>
					<p class="company-title cp-title" ng-click="ViewCompanyProfile($event,1)" ng-bind="job.title"></p>
					<p class="job-sort-desc" ng-bind="job.shortDesc"></p>
					<div class="like-share">
						<ul>
							<li><span ng-bind="job.likes.number"></span> <span>like<span ng-if="job.likes.number > 1">s</span></span></li>
							<li><span ng-bind="job.shares.number"></span> <span>share<span ng-if="job.shares.number > 1">s</span></span></li>
						</ul>
					</div>
				</div><!-- job -->
			</div>
		</div>
		<!-- modal -->


		<div class="modal fade" id="JobModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel cp-title" ng-click="ViewCompanyProfile($event,1)" ng-bind="CurrentJob.title"></h4>
		      </div>
		      <div class="modal-body">
		        <div class="modal-image">
					<a ng-href="{{ CurrentJob.link_direct }}" target="_blank"><img src="http://www.fbcoverlover.com/covers/know-your-limitations-and-defy-them.jpg?i" alt=""></a>
		        </div>
		        <div class="modal-job-body">
					<div class="job-info">
						<p class="bold" ng-bind="CurrentJob.title"></p>
						<p class="model-job-desc" ng-bind="CurrentJob.description"></p>
					</div>
					<div class="job-social">
						<ul>
							<li><span ng-bind="CurrentJob.likes.number"></span> <span>like<span ng-if="CurrentJob.likes.number > 1">s</span></li>
							<li><span ng-bind="CurrentJob.shares.number"></span> <span>Share<span ng-if="CurrentJob.shares.number > 1">s</span></li>
						</ul>
					</div>
					<div class="job-comment">
						<div class="job-comment-avatar pull-left">
							<img src="http://img1.wikia.nocookie.net/__cb20100502232308/adventuretimewithfinnandjake/images/e/e4/At_100x100_iconjake.jpg" alt="">
							<p class="job-comment-user semibold text-center">Cuong Vu</p>
						</div>
						<div class="job-comment-body">
							<p class="job-comment-title semibold">I can do it</p>
							<p class="job-comment-desc">Kinh nhiều năm, đã là hệ thống lớn 100k user,muốn chứng tỏ bản thân</p>
						</div>
					</div>
		        </div>
		      </div>
		    </div>
		  </div>
		</div> <!-- modal -->

	</div>
</div>